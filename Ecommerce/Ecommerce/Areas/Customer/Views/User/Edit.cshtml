@model Ecommerce.Models.User

@{
    ViewData["Title"] = "Edit Account";
}
<br />
<h1 class="text-info text-center">Edit Account</h1>
<br />

<form asp-action="Edit" method="post" id="user-form" enctype="multipart/form-data">

    <div class="form-group row">
        <div class="col-2"> </div>
        <div class="col-8">
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <b><label asp-for="UserName" class="control-label">User Name</label></b>
        </div>
        <div class="col-8">
            <input asp-for="UserName" class="form-control" readonly="readonly" />
            <p id="Status" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <b><label asp-for="AccountName" class="control-label"></label></b>
        </div>
        <div class="col-8">
            <input asp-for="AccountName" class="form-control" />
        </div>
    </div>

    <div class="form-group  row">
        <div class="col-2">
        </div>
        <div class="col-8">
            <input type="submit" value="Update" class="btn btn-outline-success" onclick="return confirm('Do you want to update your account?');"  />
            <a asp-action="Index" class="btn btn-outline-info">Back</a>
        </div>
    </div>
</form>

<br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    AccountName: {
                        required: true,
                    }
                 
                },
                messages: {

                    AccountName: {
                        required: "Please Enter Your Name",
                    }
                   
                }
            });
        });

    </script>
}
