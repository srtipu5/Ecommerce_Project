@model Ecommerce.Models.Products

@{
    ViewData["Title"] = "Edit Product";
}

<h1 class="text-info" style="text-align:center;">Edit Product</h1>
<br />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <b><label asp-for="Name" class="control-label"></label></b><b style="color:red;"> *</b>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <span asp-validation-for="Name" class="text-danger">@ViewBag.Message</span>
                </div>          
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <b><label asp-for="Price" class="control-label"></label></b><b style="color:red;"> *</b>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <b><label asp-for="Image" class="control-label"></label></b>
                </div>
                <div class="col-8">
                    <input asp-for="Image" class="form-control" type="file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <b><label asp-for="ProductColor" class="control-label"></label></b>
                </div>
                <div class="col-8">
                    <input asp-for="ProductColor" class="form-control" />
                    <span asp-validation-for="ProductColor" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <b><label asp-for="ProductTypeId" class="control-label"></label></b><b style="color:red;"> *</b>
                </div>
                <div class="col-8">
                    <select asp-for="ProductTypeId" class="form-control" asp-items="ViewBag.ProductTypeId">
                        <option value="">Select Product Type</option>
                    </select>
                    <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <b> <label asp-for="SpecialTagId" class="control-label"></label></b><b style="color:red;"> *</b>
                </div>
                <div class="col-8">
                    <select asp-for="SpecialTagId" class="form-control" asp-items="ViewBag.SpecialTagId">
                        <option value="">Select Product Special Tag</option>
                    </select>
                    <span asp-validation-for="SpecialTagId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <b><label asp-for="IsAvailabe" class="control-label"></label></b>
                </div>
                <div class="col-8">
                    <input asp-for="IsAvailabe" class="form-check-inline" />
                    <span asp-validation-for="IsAvailabe" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-outline-success" onclick="return confirm('Do you want to update this product?');"/>
                <a asp-action="Index" class="btn btn-outline-info">Back</a>
            </div>
        </div>

        <div class="col-1"></div>

        <div class="col-3">
            <br />
            <img src="~/@Model.Image" width="250" height="250" style="border-radius:5px;border:1px solid grey" />
        </div>

    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
