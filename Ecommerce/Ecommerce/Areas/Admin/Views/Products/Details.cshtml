@model Ecommerce.Models.Products
@*@using Ecommerce.Models.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor*@



@{
    ViewData["Title"] = "Product Details";
}

<h1 class="text-info" style="text-align:center;">Product Details</h1>
<br />
<form asp-action="Details" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="col-8">
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-3">
                    <b><label asp-for="Name" class="control-label"></label></b>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-3">
                    <b><label asp-for="Price" class="control-label"></label></b>
                </div>
                <div class="col-6">
                    <input asp-for="Price" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-3">
                    <b><label asp-for="ProductColor" class="control-label"></label></b>
                </div>
                <div class="col-6">
                    <input asp-for="ProductColor" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-3">
                    <b><label asp-for="ProductTypeId" class="control-label"></label></b>
                </div>
                <div class="col-6">
                    <input asp-for="ProductTypeId" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-3">
                    <b> <label asp-for="SpecialTagId" class="control-label"></label></b>
                </div>
                <div class="col-6">
                    <input asp-for="SpecialTagId" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="SpecialTagId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-4">
                    <br />
                    <br />
                    <b><label asp-for="IsAvailabe" class="control-label"></label></b>
                </div>
                <div class="col-5">
                    @if (Model.IsAvailabe)
                    {
                        <img src="~/Images/stockinnow.jpg" width="200px" height="120px" />
                    }
                    else
                    {
                        <img src="~/Images/soldout.jpg" width="200px" height="120px" />
                    }
                </div>
            </div>
            <br />
            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success">Edit</a>
                <a asp-action="Index" class="btn btn-outline-info">Back</a>
            </div>
        </div>

        <div class="col-3">
            <img src="~/@Model.Image" width="250" height="250" style="border-radius:5px;border:1px solid grey" />
        </div>

    </div>
</form>
<br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}