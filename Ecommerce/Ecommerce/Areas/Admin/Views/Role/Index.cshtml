
@{
    ViewData["Title"] = "Role";
}
<style>
    th {
        text-align: center;
    }

    td {
        text-align: center;
    }
</style>
<br />
<h1 class="text-info text-center">Roles</h1>
<p class="float-right">
    <a asp-action="Create" class="btn btn-outline-info"><i class="fas fa-plus-square"></i> Add New Role</a>
</p>
<br />
<table class="table table-bordered rounded" id="productTable">
    <thead>
        <tr class="table-info">
            <th>Name</th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Roles)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary"><i class="fas fa-edit"></i></a>
                     <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>

    @if (TempData["save"] != null)
    {
        <script type="text/javascript">
            $(function () {
                alertify.success('@TempData["save"]');
            });
        </script>
    }
    @if (TempData["update"] != null)
    {
        <script type="text/javascript">
            $(function () {
                alertify.success('@TempData["update"]');
            });
        </script>
    }
    @if (TempData["delete"] != null)
    {
        <script type="text/javascript">
            $(function () {
                alertify.error('@TempData["delete"]');
            });
        </script>
    }
    @if (TempData["activate"] != null)
    {
        <script type="text/javascript">
            $(function () {
                alertify.success('@TempData["activate"]');
            });
        </script>
    }
    @if (TempData["lockout"] != null)
    {
        <script type="text/javascript">
            $(function () {
                alertify.warning('@TempData["lockout"]');
            });
        </script>
    }

}
