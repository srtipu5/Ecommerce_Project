@model Ecommerce.Areas.Admin.ViewModels.RoleUserViewModel

@{
    ViewData["Title"] = "Assign";
}
<br />
<h1 class="text-info text-center">Assign Role</h1>
<br />
<form asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <div class="col-3">
        </div>
        <div class="col-1">
            <b><label asp-for="UserId" class="control-label"></label></b>
        </div>
        <div class="col-5">
            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
                <option value="">Choose User</option>
            </select>
            <span asp-validation-for="UserId" class="text-danger"></span>
            <span class="text-danger">@ViewBag.mgs</span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-3">
        </div>
        <div class="col-1">
            <b><label asp-for="RoleId" class="control-label"></label></b>
        </div>
        <div class="col-5">
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId">
                <option value="">Choose Role</option>
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-4"></div>
        <div class="col-5">
            <input type="submit" value="Create" class="btn btn-outline-primary" />
            <a asp-action="Index" class="btn btn-outline-info">Back</a>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
