
@{
    ViewData["Title"] = "Delete Role";
}
<br />
<h1 class="text-info text-center">Delete Role</h1>
<br />

<form asp-action="Delete" method="post" id="role-form" enctype="multipart/form-data">

    <div class="form-group row">
        <div class="col-2"> </div>
        <div class="col-8">
            <input type="hidden" value="@ViewBag.Id" name="id" />
        </div>
    </div>


    <div class="form-group row">
        <div class="col-2">
            <b><label class="control-label">Role Name</label></b>
        </div>
        <div class="col-8">
            <input value="@ViewBag.Name" name="name" id="name" class="form-control" readonly="readonly" />
        </div>
    </div>


    <div class="form-group  row">
        <div class="col-2">
        </div>
        <div class="col-8">
            <h3 style="color:red;">Are you sure you want to delete @ViewBag.Name?</h3>
            <br />
            <input type="submit" value="Delete" class="btn btn-outline-danger" onclick="return confirm('Do you want to delete @ViewBag.Name?');" />
            <a asp-action="Index" class="btn btn-outline-info">Back</a>
        </div>
    </div>
</form>

<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}