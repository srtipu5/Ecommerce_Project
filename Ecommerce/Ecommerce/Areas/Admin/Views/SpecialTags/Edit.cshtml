@model Ecommerce.Models.SpecialTags

@{
    ViewData["Title"] = "Edit Tag";
}

<h1 style="color:blue;">Edit Tag</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SpecialTag" class="control-label"></label>
                <input asp-for="SpecialTag" class="form-control" />
                <span asp-validation-for="SpecialTag" class="text-danger"></span>
                <p style="color:red">@TempData["Msg"]</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-outline-success" onclick="return confirm('Do you want to update this tag?');" />
                <a asp-action="Index" class="btn btn-outline-info">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
