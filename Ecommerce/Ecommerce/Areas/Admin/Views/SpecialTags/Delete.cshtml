@model Ecommerce.Models.SpecialTags

@{
    ViewData["Title"] = "Delete Tag";
}

<h1 style="color:red;">Delete Tag</h1>

<h3>Are you sure you want to delete this tag?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialTag)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpecialTag)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" onclick="return confirm('Do you want to delete this tag?');" /> 
        <a asp-action="Index" class="btn btn-outline-info">Back</a>
    </form>
</div>
