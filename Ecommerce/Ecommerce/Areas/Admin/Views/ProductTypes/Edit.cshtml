@model Ecommerce.Models.ProductTypes

@{
    ViewData["Title"] = "Edit Product";
}

<h1 style="color:blue;">Edit Product</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductType" class="control-label"></label>
                <input asp-for="ProductType" class="form-control" />
                <span asp-validation-for="ProductType" class="text-danger"></span>
                <p style="color:red">@TempData["Msg"]</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-outline-success" onclick="return confirm('Do you want to update this product?');" />
                <a asp-action="Index" class="btn btn-outline-info">Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
