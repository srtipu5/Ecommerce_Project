@model Ecommerce.Models.ProductTypes

@{
    ViewData["Title"] = "Add New Product";
}
<br />

<h1 style="color:blue;">Add New Product</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductType" class="control-label"></label>
                <input asp-for="ProductType" class="form-control" />
                <span asp-validation-for="ProductType" class="text-danger"></span>
                <p style="color:red">@TempData["Msg"]</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Add New Product" class="btn btn-outline-success" onclick="return confirm('Do you want to add this product?');"/>
                <a asp-action="Index" class="btn btn-outline-info">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
 
}
