@model Ecommerce.Models.ProductTypes

@{
    ViewData["Title"] = "Delete Product";
}

<h1 style="color:red;">Delete Product</h1>
<h3>Are you sure you want to delete this product?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductType)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" onclick="return confirm('Do you want to delete this product?');"/>
        <a asp-action="Index" class="btn btn-outline-info">Back</a>
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

